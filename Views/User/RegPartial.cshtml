@using Belt.Models
<div class="row">
    <div class="col mx-2">
        <h1>Registration</h1>
        @model User 
        <form asp-action="Register" asp-controller="User" method="post">
            <div class="row">
                <div class="col-4">
                    <span asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FirstName" class="form-control"><br>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <span asp-validation-for="LastName"></span>
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="LastName" class="form-control"><br>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control"><br>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Password" class="form-control"><br>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <span asp-validation-for="Confirm"></span>
                    <label asp-for="Confirm"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Confirm" class="form-control"><br>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label for="" class="col col-form-label"></label> 
                </div>
                <div class="col-8">
                    <button class="btn btn-info">Register</button>
                </div> 
            </div> 
        </form>
    </div>
</div>